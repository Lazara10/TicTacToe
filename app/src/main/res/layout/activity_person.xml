<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonActivity"
    android:background="#BCD69D">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:text="X Score"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="O Score"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_margin="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/scoreViewX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="#D50000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/scoreViewO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="#D50000"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button1"
            android:layout_width="50pt"
            android:layout_margin="2dp"
            android:layout_height="50pt"
            android:textSize="40sp"
            android:backgroundTint="#00AFFF"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="50pt"
            android:layout_margin="2dp"
            android:layout_height="50pt"
            android:textSize="40sp"
            android:backgroundTint="#00AFFF"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="50pt"
            android:layout_margin="2dp"
            android:layout_height="50pt"
            android:textSize="40sp"
            android:backgroundTint="#00AFFF"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button4"
            android:layout_width="50pt"
            android:layout_margin="2dp"
            android:layout_height="50pt"
            android:textSize="40sp"
            android:backgroundTint="#00AFFF"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="50pt"
            android:layout_margin="2dp"
            android:layout_height="50pt"
            android:textSize="40sp"
            android:backgroundTint="#00AFFF"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="50pt"
            android:layout_margin="2dp"
            android:layout_height="50pt"
            android:textSize="40sp"
            android:backgroundTint="#00AFFF"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button7"
            android:layout_width="50pt"
            android:layout_margin="2dp"
            android:layout_height="50pt"
            android:textSize="40sp"
            android:backgroundTint="#00AFFF"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="50pt"
            android:layout_margin="2dp"
            android:layout_height="50pt"
            android:textSize="40sp"
            android:backgroundTint="#00AFFF"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="50pt"
            android:layout_margin="2dp"
            android:layout_height="50pt"
            android:textSize="40sp"
            android:backgroundTint="#00AFFF"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:backgroundTint="#2000FF"
            android:text="გამოსვლა"/>

        <Button
            android:id="@+id/resetButton"
            android:onClick="resetGame"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="Reset"
            android:backgroundTint="#2000FF"/>

        <Button
            android:id="@+id/gotoPasswordChangeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="პაროლი"
            android:backgroundTint="#2000FF"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Name" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#87693D"
            android:text="შენახვა" />
    </TableRow>


</TableLayout>

